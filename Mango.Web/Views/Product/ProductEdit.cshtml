@using Mango.Web.Models.Product
@model ProductDto

<form asp-controller="Product" asp-action="ProductEdit">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Edit Coupon</h1>
        <input asp-for="ProductId" hidden />
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Product Name</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for=Name class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Product Price</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for=Price class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Product Description</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for=Description class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Product Category</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for=CategoryName class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">ImageUrl ImageUrl</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for=ImageUrl class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a class="btn-primary btn form-control " asp-controller="Product" asp-action="ProductIndex">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>
